{
  "name": "next-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "debug": "NODE_OPTIONS=--inspect next dev",
    "debug:win": "set \"NODE_OPTIONS=--inspect\" && next dev",
    "build": "prettier --check . && next build",
    "start": "next start",
    "lint": "eslint",
    "stylelint": "stylelint '**/*.{css,scss}'",
    "format": "prettier --write .",
    "build:local": "prettier --write . && next build"
  },
  "dependencies": {
    "next": "16.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "typescript": "^5"
  }
}
